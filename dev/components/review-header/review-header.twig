{% import '../date/date.twig' as Date %}

{# входные #}
{% set _league = league|default({ name:'League', href:'#', logo:'/assets/images/league5.webp' }) %}
{% set _match  = match|default({
  date_value:null,
  date_opts: { variant:'short', show_icon:true, icon:'calendar_today' },
  status:'Scheduled',
  score1:0, score2:0,
  team1:{ name:'Team 1', href:'#', logo:'/assets/images/team1.webp' },
  team2:{ name:'Team 2', href:'#', logo:'/assets/images/team2.webp' }
}) %}

<section class="block review-header">
  <div class="block__inner">
    <div class="review-header__inner">

      <div class="review-header__info">
        <div class="review-header__league">
          <img src="{{ _league.logo }}" alt="{{ _league.name }}" class="review-header__league-logo">
          <a href="{{ _league.href }}" class="review-header__league-name">{{ _league.name }}</a>
        </div>

        {# выводим дату/время через макрос #}
        <div class="review-header__match-time">
          {% if _match.date_value %}
            {{ Date.render(_match.date_value, _match.date_opts) }}
          {% endif %}
        </div>
      </div>

      <div class="review-header__teams">
        <a href="{{ _match.team1.href }}" class="review-header__team review-header__team--home">
          <img src="{{ _match.team1.logo }}" alt="{{ _match.team1.name }}" class="review-header__team-logo">
          <span class="review-header__team-name">{{ _match.team1.name }}</span>
        </a>

        <div class="review-header__score-box">
          <span class="review-header__score">{{ _match.score1 }} - {{ _match.score2 }}</span>
          <span class="review-header__status">{{ _match.status }}</span>
        </div>

        <a href="{{ _match.team2.href }}" class="review-header__team review-header__team--away">
          <img src="{{ _match.team2.logo }}" alt="{{ _match.team2.name }}" class="review-header__team-logo">
          <span class="review-header__team-name">{{ _match.team2.name }}</span>
        </a>
      </div>

    </div>
  </div>
</section>


