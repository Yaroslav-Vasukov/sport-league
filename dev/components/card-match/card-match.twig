{% import '../date/date.twig' as Date %}

{# дефолты #}
{% set _home       = team_home|default({ name:'Home', href:'#', logo:'/assets/images/team1.webp' }) %}
{% set _away       = team_away|default({ name:'Away', href:'#', logo:'/assets/images/team2.webp' }) %}
{% set _score_home = score_home|default('—') %}
{% set _score_away = score_away|default('—') %}
{% set _status     = status|default('Scheduled') %}
{% set _league     = league|default(null) %}
{% set _date_value = date_value|default(null) %}
{% set _date_opts  = date_opts|default({ variant:'short', show_icon:true, icon:'calendar_today' }) %}
{% set _button     = button|default(null) %}

<article class="card-match">
  <div class="card-match__teams">
    <a href="{{ _home.href }}" class="card-match__team">
      <img src="{{ _home.logo }}" alt="{{ _home.name }}" class="card-match__team-logo" loading="lazy" decoding="async">
      <span class="card-match__team-name">{{ _home.name }}</span>
      <span class="card-match__score">{{ _score_home }}</span>
    </a>

    <a href="{{ _away.href }}" class="card-match__team">
      <img src="{{ _away.logo }}" alt="{{ _away.name }}" class="card-match__team-logo" loading="lazy" decoding="async">
      <span class="card-match__team-name">{{ _away.name }}</span>
      <span class="card-match__score">{{ _score_away }}</span>
    </a>

    {% if _button %}
      <a href="{{ _button.url }}" class="card-match__button">{{ _button.label }}</a>
    {% endif %}
  </div>

  <div class="card-match__meta">
    {% if _date_value %}
       <span class="card-match__date">{{ Date.render(_date_value, _date_opts) }}</span> 
    {% endif %}
    <span class="card-match__status">{{ _status }}</span>
    {% if _league %}
      <a href="{{ _league.href }}" class="card-match__league">{{ _league.name }}</a>
    {% endif %}
  </div>
</article>
